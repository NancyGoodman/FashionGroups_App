<div class="row">
  <div class="col-md-12">
    <h1>Brands</h1>
    <% if current_user %>
    <%= link_to 'Add a new brand', new_brand_path %><br>
    <%= link_to 'See conglomerates', conglomerates_path %>
    <% end %>
  </div>
</div>
  

<div class="row">
  <div class="col-md-6">
    <table class="table table-hover">
      <tr></tr>
      <tr>
        <th></th>
        <th>House</th>
          <% if current_user %>  
          <th></th>
          <% end %>
      </tr>

      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= image_tag brand.logo.url(:thumb), class: 'logo_pic' %>
            <td><%= link_to(brand.house, brand_path(brand)) %></td>

            <% if current_user %>
            <td>
              <%= link_to "edit", edit_brand_path(brand) %>
              <%= link_to "delete", brand_path(brand), method: :delete, data: {confirm: 'Are you sure you want to delete this brand?'} %>
            </td>
            <% end %>

          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

