<h1>Brands</h1>
<% if current_user %>
<%= link_to 'Add a new brand', new_brand_path %>
<% end %>

<table>
  <p><tr></tr></p>
  <tr>
    <th>House</th>
      <% if current_user %>  
      <th></th>
      <% end %>

  </tr>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to(brand.house, brand_path(brand)) %></td>

        <% if current_user %>
        <td>
          <%= link_to "edit", edit_brand_path(brand) %>
          <%= link_to "delete", brand_path(brand), method: :delete, data: {confirm: 'Are you sure you want to delete this brand?'} %>
        </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

